    parser.add_argument('-s', 'memorySplit' type=str)                         #   memory split(3:1)
	parser.add_argument('tracefile',        type=str)                         #   tracefile
    contents = parser.parse_args()
    if (contents.policy == 'lru'):
        # lru
    else:
        # optimal
        
    print(contents.policy)

if __name__ == "__main__":
    run()


